{
    "compilerOptions": {
        "target": "ES2020",  // Changed from ES6
        "module": "commonjs",  // Keep commonjs (lowercase is standard)
        "rootDir": "src",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}